# ==================================================
# Trading System Environment Variables
# ==================================================
# IMPORTANT: Copy this to .env and fill in your values
# NEVER commit .env to git!
# ==================================================

# ==================== DATABASE ====================
# TimescaleDB (PostgreSQL) Configuration
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=trading_data
TIMESCALE_USER=trading
TIMESCALE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE  # ⚠️ CHANGE THIS!

# ==================== CACHE ====================
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Optional: Leave empty for local dev, set for production
REDIS_DB=0

# ==================== MESSAGING ====================
# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=trading_

# ==================== API KEYS ====================
# Market Data APIs
YFINANCE_ENABLED=true

# Alpha Vantage (optional)
ALPHA_VANTAGE_API_KEY=

# NSE India (if using)
NSE_API_KEY=
NSE_API_SECRET=

# ==================== NOTIFICATIONS ====================
# Email Notifications (SMTP)
EMAIL_NOTIFIER_ENABLED=false  # Set to true to enable
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-specific-password  # ⚠️ Use app password, not real password!
RECIPIENT_EMAILS=recipient1@email.com,recipient2@email.com

# Discord Notifications
DISCORD_NOTIFIER_ENABLED=false  # Set to true to enable
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# ==================== SECURITY ====================
# Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60  # seconds

# Session Management
SESSION_SECRET_KEY=CHANGE_ME_RANDOM_STRING_HERE  # ⚠️ Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# IP Whitelisting (optional - comma separated)
ALLOWED_IPS=127.0.0.1,localhost

# ==================== TRADING CONFIG ====================
# Capital & Risk
INITIAL_CAPITAL=50000
MAX_POSITION_SIZE_PERCENT=20.0
MAX_RISK_PER_TRADE_PERCENT=1.0
MAX_DAILY_LOSS_PERCENT=5.0

# Position Limits
MAX_SWING_POSITIONS=5
MAX_INTRADAY_POSITIONS=3

# ==================== DASHBOARD ====================
# Streamlit Dashboard
DASHBOARD_PORT=8501
DASHBOARD_ENABLE_AUTH=false  # Set to true for production
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=CHANGE_ME  # ⚠️ CHANGE THIS!

# ==================== LOGGING ====================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading.log

# ==================== DEVELOPMENT ====================
# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true
ENABLE_PROFILING=false

# ==================== PERFORMANCE ====================
# Threading & Multiprocessing
MAX_WORKER_THREADS=10
MAX_WORKER_PROCESSES=4

# Caching
CACHE_TTL_SECONDS=300  # 5 minutes
ENABLE_QUERY_CACHE=true

# ==================================================
# SECURITY NOTES:
# ==================================================
# 1. NEVER commit .env file to git
# 2. Use strong passwords (20+ characters)
# 3. Generate random secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. For Gmail: Use App Passwords, not your real password
# 5. Rotate secrets regularly (every 90 days)
# 6. For production: Set ENVIRONMENT=production and DEBUG_MODE=false
# ==================================================
